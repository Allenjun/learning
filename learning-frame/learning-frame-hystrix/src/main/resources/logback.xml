<configuration>
    　　　
    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        　　　　　
        <encoder>
            　　　　　　　　　
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
            　　　　　
        </encoder>
        　　　
    </appender>

    　　　
    <root level="INFO">
        　　　　　　
        <appender-ref ref="STDOUT"/>
        　　　
    </root>
</configuration>